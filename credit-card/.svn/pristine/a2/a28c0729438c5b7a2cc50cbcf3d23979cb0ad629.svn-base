    @ApiOperation(value = "查询账单的解析状态，是否完成,0000:解析成功 ,0001:解析失败,0003:解析中", httpMethod = HttpGet.METHOD_NAME, notes = "查询账单的解析状态，是否完成,0000:解析成功 ,0001:解析失败,0003:解析中")
    @ApiImplicitParams({
